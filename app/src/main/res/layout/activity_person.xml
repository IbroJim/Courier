<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/colorBlack"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <TextView
        android:layout_gravity="center_horizontal"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorWhite"
        android:text="@string/profil"
        android:textStyle="bold"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_marginTop="8dp"
        android:background="@drawable/item_background"
        android:orientation="horizontal"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="8dp"
            android:src="@drawable/ic_profil"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Ибраим Сальме"
            android:layout_gravity="top"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_marginEnd="16dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="16dp"
        android:background="@drawable/item_background"
        android:orientation="horizontal"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="8dp"
            android:src="@drawable/ic_phone"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="+79780534913"
            android:layout_gravity="top"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_marginEnd="16dp" />
    </LinearLayout>
        <TextView
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:text="Cтатус"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

            <io.ghyeok.stickyswitch.widget.StickySwitch
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/sticky"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:ss_iconSize="20dp"
                app:ss_iconPadding="3dp"
                app:ss_leftIcon="@drawable/ic_accept"
                app:ss_leftText="Активен"
                app:ss_rightIcon="@drawable/ic_no_accept"
                app:ss_rightText="НеАктивен"
                app:ss_selectedTextSize="13sp"
                app:ss_sliderBackgroundColor="@color/colorBlack"
                app:ss_switchColor="@color/colorBlue"
                app:ss_textColor="@color/colorWhite"
                app:ss_textSize="12sp"/>
    </LinearLayout>


    <include layout="@layout/bottom_navigation_view_ex"
        android:layout_gravity="bottom"
        android:layout_height="50dp"
        android:layout_width="match_parent" />

</RelativeLayout>